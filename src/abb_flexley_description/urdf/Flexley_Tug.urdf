<?xml version="1.0"?>
<robot name="Flexley_Tug" xmlns:xacro="http://www.ros.org/wiki/xacro">
 
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  
  <material name="black">
  <color rgba="0 0 0 1"/>
</material>

<material name="white">
  <color rgba="1.0 1.0 1.0 1.0"/>
</material>

<material name="dark_green">
  <color rgba="0.0 0.4 0.0 1.0"/>
</material>

<material name="brown">
  <color rgba="0.545 0.271 0.075 1.0"/>
</material>

<material name="off_white">
  <color rgba="0.93 0.91 0.84 1.0"/>
</material>

<material name="yellow">
  <color rgba="1.0 1.0 0.0 1.0"/>
</material>

<material name="blue">
  <color rgba="0.0 0.0 1.0 1.0"/>
</material>

<link name="base_footprint">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <box size="0.01 0.01 0.01"/>
    </geometry>
    <material name="black"/>
  </visual>
</link>


<link name="base_link">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://abb_flexley_description/meshes/chassis.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="white"/>
  </visual>

  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
       <box size="2.1 0.5 0.230"  />
    </geometry>
  </collision>

  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="20.97"/>
    <inertia 
      ixx="0.529" ixy="0.0" ixz="0.0"
      iyy="7.829" iyz="0.0"
      izz="8.173"/>
  </inertial>
</link>


<joint name="base_joint" type="fixed">
  <parent link="base_footprint"/>
  <child link="base_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>


<link name="front_left_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="package://abb_flexley_description/meshes/wheel_front_right.stl" scale="0.001 0.001 0.001" />
    </geometry>
    <material name="dark_green"/>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="1.5708 0 0"/>  
    <geometry>
      <cylinder radius="0.075" length="0.05"/>   
    </geometry>
  </collision>
  <inertial>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <mass value="0.765"/>
    <inertia ixx="0.001235" ixy="0" ixz="0" iyy="0.001235" iyz="0" izz="0.002152"/>
  </inertial>
</link>

<joint name="front_left_wheel_joint" type="continuous">
  <parent link="base_link"/>
  <child link="front_left_wheel"/>
  <origin xyz="0.580 0.200 -0.08" rpy="0 0 0"/>
  <axis xyz="0 1 0"/>
</joint>

